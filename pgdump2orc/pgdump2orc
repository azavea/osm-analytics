#!/bin/sh
set -e

usage() {
  echo "Usage: $0 [-i <string> (input path)] [-o <string> (mounted output directory)]" 1>&2
  exit 1
}

while getopts ":i:o:" x; do
    case "${x}" in
        i)
            i=${OPTARG}
            ;;
        o)
            o=${OPTARG}
            ;;
        *)
            usage
            ;;
    esac
done
shift $((OPTIND-1))

if [ -z "${i}" ] || [ -z "${o}" ]; then
    usage
fi

pgdump2pbf() {
  echo "Generating PBF from pgdump..."
  mkdir -p $2/working
  cd $2/working
  rm -rf $2/osm-dump.osh.pbf $2/osm-dump.osc.xml $2/osm-dump.osc.xml.bz2
  planet-dump-ng -f $1 --history-pbf $2/osm-dump.osh.pbf --changesets $2/osm-dump.osc.xml.bz2
  bzip2 -dc $2/osm-dump.osc.xml.bz2 > $2/osm-dump.osc.xml
  cd $2
  rm -rf $2/osm-dump.osc.xml.bz2 $2/working
}

pbf2orc() {
  echo "Generating history orc..."
  rm -rf $1/osm-dump.osh.orc
  osm2orc $1/osm-dump.osh.pbf $1/osm-dump.osh.orc              # history
  rm -rf $1/osm-dump.osh.pbf

  echo "Generating changeset orc..."
  rm -rf $1/osm-dump.osc.orc
  osm2orc --changesets $1/osm-dump.osc.xml $1/osm-dump.osc.orc # changesets
  rm -rf $1/osm-dump.osc.xml
}

# pgdump to pbf
pgdump2pbf $i $o

# pbf to orc
pbf2orc $o

